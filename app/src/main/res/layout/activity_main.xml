<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_900"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/gray_1000">

        <ImageView
            android:id="@+id/messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginHorizontal="2dp"
            android:padding="4dp"
            android:src="@drawable/icon_message"
            app:tint="@color/gray_100" />

        <ImageView
            android:id="@+id/contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="2dp"
            android:padding="4dp"
            android:src="@drawable/icon_users"
            app:tint="@color/gray_100" />

        <ImageView
            android:id="@+id/grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginHorizontal="4dp"
            android:padding="4dp"
            android:src="@drawable/icon_grid"
            app:tint="@color/gray_100" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/videocam"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cornerRadius="28dp"
            android:layout_marginHorizontal="16dp"
            app:iconTint="@color/gray_1000"
            android:backgroundTint="@color/gray_100"
            app:icon="@drawable/icon_videocam_slash"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/micrifone"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cornerRadius="28dp"
            app:iconTint="@color/gray_1000"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@color/gray_100"
            app:icon="@drawable/icon_micrifone_slash"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/hand"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cornerRadius="28dp"
            android:layout_marginHorizontal="16dp"
            app:iconTint="@color/gray_100"
            android:backgroundTint="@color/gray_600"
            app:icon="@drawable/icon_hand_heart_filled"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/phone"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cornerRadius="28dp"
            android:layout_marginHorizontal="16dp"
            app:iconTint="@color/gray_100"
            android:backgroundTint="@color/Red"
            app:icon="@drawable/icon_phone_down_filled"/>

    </LinearLayout>


</LinearLayout>